  background-color: #fff;
  box-shadow: 0 .026667rem .053333rem rgba(0,0,0,.1);
}
.logo_title{
  width: 55%;
  margin-top: 10rpx;
}
.logo_img{
  width: 100%;
  height: 70rpx;
}
.year_img{
  width: 20%;
}
.year{
  width: 100%;
  height: 70rpx;
}
.small_view{
  width: 20%;
  height: 70rpx;
  margin-top: 10rpx;
}
.small_view swiper{
  width: 100%;
  height: 100%;
}
.text_swiper{
  display: flex;
  justify-content: space-around;
}

.small_view swiper .login,
.small_view swiper .regist{
