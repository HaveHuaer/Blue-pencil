.nav_list {
  width: 100%;
}

.list_box {
  width: 100%;
  display: flex;
  margin-bottom: 50rpx;
}

.image_box {
  width: 250rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.image_box image {
  width: 100%;
  height: 100%;
}

.text_box {
  width: 400rpx;
  height: 200rpx;
}

.text_tit {
  width: 100%;
  height: 95rpx;
  font-size: 35rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text_name {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.text_all {
  display: flex;
}

.text_all image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.text_all .names {
  width: 100px;
  height: 100%;
  line-height: 50rpx;
  overflow: hidden;
  /* 第二步：让文本不会换行， 在同一行继续 */
  white-space: nowrap;
  /* 第三步：用省略号来代表未显示完的文本 */
  text-overflow: ellipsis;
}

.class_num {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.text_foot {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.text_foot .learn_num {
  font-size: 28rpx;
  color: #8C8C8C;
}

.money {
  display: flex;
  font-size: 28rpx;
  margin-right: 5rpx;
  border: 1rpx solid #ff5900;
  border-radius: 10rpx;
}

.money_box {
  color: #ff5900;
  border-radius: 10rpx;
}

.fenx {
  background-color: #ff5900;
  color: white;
  font-size: 25rpx;
}